<%= flash[:notice] %>

<h1>hi</h1>

<%= link_to '新增書籍', new_book_path %>

<table>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to book.bookname, book_path(book.id) %></td>
    <td><%= link_to '編輯', edit_book_path(book.id) %></td>
    <td><%= link_to '刪除', book_path(book.id), method:'delete', data: { confirm: '確定刪除？' } %></td>
  </tr>
  <% end %>
</table>



<% if current_user %>
  <%= current_user.nickname %>
  <%= link_to '編輯', '#' %>
  <%= link_to '登出', logout_users_path, method:'delete' %>
<% else %>
  <%= link_to '註冊', sign_up_users_path %>
  <%= link_to '登入', sign_in_users_path %>
<% end %>